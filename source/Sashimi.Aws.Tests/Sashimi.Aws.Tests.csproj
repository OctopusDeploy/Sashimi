<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <RootNamespace>Sashimi.Aws.Tests</RootNamespace>
        <AssemblyName>Sashimi.Aws.Tests</AssemblyName>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <Nullable>disable</Nullable>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Sashimi.Aws.Accounts\Sashimi.Aws.Accounts.csproj" />
        <ProjectReference Include="..\Sashimi.Aws\Sashimi.Aws.csproj" />
